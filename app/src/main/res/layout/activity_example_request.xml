<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ExampleRequestActivity">

    <Button
        android:id="@+id/btn_example_request_get_user"
        android:textSize="50sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_get_user" />

    <TextView
        android:id="@+id/tv_example_request_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textAlignment="center"
        android:text="@string/placeholder_no_data" />

    <ImageView
        android:id="@+id/iv_example_request_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"  />

</LinearLayout>