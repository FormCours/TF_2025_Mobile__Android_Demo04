<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:showDividers="middle"
    android:divider="@android:color/transparent"
    android:dividerPadding="@dimen/spacing"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_main_async"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_menu_async"/>

    <Button
        android:id="@+id/btn_main_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_menu_request"/>

    <Button
        android:id="@+id/btn_main_gps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_menu_gps"/>

</LinearLayout>